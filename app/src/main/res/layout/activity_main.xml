<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_gravity="center_horizontal"

    tools:context=".MainActivity">

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/asul"
        android:text="Na co masz ochotÄ™?"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/main_gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:foregroundGravity="center"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:text="Ciasta"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"

            />

        <ImageButton
            android:id="@+id/sweets_categoryBTN"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:background="@null"
            android:contentDescription="Ciasta"
            app:srcCompat="@drawable/sweets_option"
            android:scaleY="0.5"
            android:scaleX="0.5"

            />

        <TextView
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:text="Drinki"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"

            />

        <ImageButton
            android:id="@+id/drinks_categoryBTN"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:background="@null"
            android:contentDescription="Drinki"
            app:srcCompat="@drawable/coctail"
            android:scaleY="0.5"
            android:scaleX="0.5"
            />


        <TextView
            android:id="@+id/textView5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:text="Obiady"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"

            />

        <ImageButton
            android:id="@+id/dinners_categoryBTN"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="bottom"
            android:background="@null"
            android:contentDescription="Obiady"
            app:srcCompat="@drawable/dinners_option"
            android:scaleY="0.5"
            android:scaleX="0.5"/>


    </GridLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>